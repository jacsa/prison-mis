@using BootstrapSupport
@model IEnumerable<PRS.Models.PrisonerProperty>
@{
    ViewBag.Title = "PRISONER BELONGINGS قیدی کا سامان";
}
<div class="title">
    @ViewBag.Title
<div class="float-right">@Html.ActionLink("New Belonging", "Create", new { PrisonerId = Request["PrisonerId"] }, new { @class = "btn btn-small btn-success" })</div>
</div>

<table class="table" id="table2excel">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Prisoner)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfDeposit)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfReturn)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Prisoner.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfDeposit)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfReturn)</td>
                <td>
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            Action
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Edit", "Edit", new { id = item.PrisonerPropertyId, PrisonerId = Request["PrisonerId"] })</li>
                            <li>@Html.ActionLink("Details", "Details", new { id = item.PrisonerPropertyId, PrisonerId = Request["PrisonerId"] })</li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



