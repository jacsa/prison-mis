        @Html.HiddenFor(model => model.AdmissionId)

        <table class="table2columns">
            <tr>
                <td>
                    <div class="title-maroon">HEALTH PROFILE طبی معلومات</div>
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.Prisoner.IdentificationMark1)</dt>
                        <dd>@Html.DisplayFor(model => model.Prisoner.IdentificationMark1)</dd>
                    </dl>
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.Prisoner.IdentificationMark2)</dt>
                        <dd>@Html.DisplayFor(model => model.Prisoner.IdentificationMark2)</dd>
                    </dl>
