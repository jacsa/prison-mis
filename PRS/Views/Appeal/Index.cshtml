@using BootstrapSupport
@model IEnumerable<PRS.Models.Appeal>
    @{
        ViewBag.Title = "Appeals";
    }
    <div class="title">
        @ViewBag.Title
    <div class="float-right">@Html.ActionLink("New Appeal", "Create", new { PrisonerId = Request["PrisonerId"] }, new { @class = "btn btn-small btn-success" })</div>
</div>

<table class="table" id="table2excel">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOfAppeal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Court)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfResult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfAppeal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Court.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfResult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                        Action
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Edit", "Edit", new { id = item.AppealId, PrisonerId = Request["PrisonerId"] })</li>
                        <li>@Html.ActionLink("Details", "Details", new { id = item.AppealId, PrisonerId = Request["PrisonerId"] })</li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>
